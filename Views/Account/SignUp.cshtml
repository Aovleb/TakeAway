@model TakeAway.ViewModels.SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
    string activeForm = ViewData["ActiveForm"]?.ToString() ?? "Client";
}

<div class="container py-5 mb-5 mt-4">
    <div class="header text-center">
        <h1 class="page-title gold-accent">Create your account</h1>
        <p class="page-subtitle">Join DLISH as a client or restaurant owner.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 position-relative">
            <div class="signup-card card-no-hover">
                <div class="card-body m-4">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible flash-message" role="alert">
                            @ViewData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="d-flex justify-content-center gap-md mb-4">
                        <button id="clientBtn" class="btn btn-signin @(activeForm == "Client" ? "active" : "")">Sign up as a client</button>
                        <button id="restaurantBtn" class="btn btn-signin @(activeForm == "RestaurantOwner" ? "active" : "")">Sign up as a restaurateur</button>
                    </div>

                    <!-- Client -->
                    <form id="clientForm" asp-action="RegisterClient" method="post" class="registration-form" style="@(activeForm == "Client" ? "" : "display: none")">
                        <div class="mb-3">
                            <label asp-for="Client.LastName" class="form-label"></label>
                            <input asp-for="Client.LastName" class="form-control" id="clientLastName" />
                            <span asp-validation-for="Client.LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.FirstName" class="form-label"></label>
                            <input asp-for="Client.FirstName" class="form-control" id="clientFirstName" />
                            <span asp-validation-for="Client.FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.PhoneNumber" class="form-label"></label>
                            <input asp-for="Client.PhoneNumber" class="form-control" id="clientPhoneNumber" />
                            <span asp-validation-for="Client.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.StreetName" class="form-label"></label>
                            <input asp-for="Client.StreetName" class="form-control" id="clientStreetName" />
                            <span asp-validation-for="Client.StreetName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.StreetNumber" class="form-label"></label>
                            <input asp-for="Client.StreetNumber" class="form-control" id="clientStreetNumber" />
                            <span asp-validation-for="Client.StreetNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.PostalCode" class="form-label"></label>
                            <input asp-for="Client.PostalCode" class="form-control" id="clientPostalCode" />
                            <span asp-validation-for="Client.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.City" class="form-label"></label>
                            <input asp-for="Client.City" class="form-control" id="clientCity" />
                            <span asp-validation-for="Client.City" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.Country" class="form-label"></label>
                            <input asp-for="Client.Country" class="form-control" id="clientCountry" />
                            <span asp-validation-for="Client.Country" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.Email" class="form-label"></label>
                            <input asp-for="Client.Email" class="form-control" id="clientEmail" />
                            <span asp-validation-for="Client.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Client.Password" class="form-label"></label>
                            <input asp-for="Client.Password" class="form-control" id="clientPassword" />
                            <span asp-validation-for="Client.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" id="clientConfirmPassword" data-val="true" data-val-required="Password confirmation is required." data-val-equalto="The passwords do not match." data-val-equalto-other="*.Client.Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="Conditions" class="form-check-input" id="clientConditions" data-val="true" data-val-required="You must accept the terms and conditions." />
                            <label asp-for="Conditions" class="form-check-label">I accept the <a href="https://youtu.be/dQw4w9WgXcQ" target="_blank" class="a-link-btn">terms & conditions</a></label>
                            <span asp-validation-for="Conditions" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-signup w-100">Create a client account</button>
                    </form>

                    <!-- Restaurant Owner -->
                    <form id="restaurantForm" asp-action="RegisterRestaurantOwner" method="post" class="registration-form" style="@(activeForm == "RestaurantOwner" ? "" : "display: none")">
                        <div class="mb-3">
                            <label asp-for="RestaurantOwner.Name" class="form-label"></label>
                            <input asp-for="RestaurantOwner.Name" class="form-control" id="restaurantName" />
                            <span asp-validation-for="RestaurantOwner.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RestaurantOwner.Email" class="form-label"></label>
                            <input asp-for="RestaurantOwner.Email" class="form-control" id="restaurantEmail" />
                            <span asp-validation-for="RestaurantOwner.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RestaurantOwner.Password" class="form-label"></label>
                            <input asp-for="RestaurantOwner.Password" class="form-control" id="restaurantPassword" />
                            <span asp-validation-for="RestaurantOwner.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" id="restaurantConfirmPassword" data-val="true" data-val-required="Password confirmation is required." data-val-equalto="The passwords do not match." data-val-equalto-other="*.RestaurantOwner.Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="Conditions" class="form-check-input" id="restaurantConditions" data-val-required="You must accept the terms and conditions." />
                            <label asp-for="Conditions" class="form-check-label">I accept the <a href="https://youtu.be/dQw4w9WgXcQ" target="_blank" class="a-link-btn">terms & conditions</a></label>
                            <span asp-validation-for="Conditions" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-signup w-100">Create a restaurant owner account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="/js/signup.js"></script>
}