@model TakeAway.ViewModels.BasketViewModel
@using System.Globalization
@using TakeAway.ViewModels

@{
    ViewData["Title"] = "Votre Panier";
    List<MealViewModel> mealDetails = ViewBag.MealDetails as List<MealViewModel> ?? new List<MealViewModel>();
}

<div class="container py-5">
    <div class="header">
        <h1 class="display-4">Votre Panier</h1>
        <p class="lead">Consultez les articles ajoutés et finalisez votre commande.</p>
    </div>

    <!-- Sélecteur de service -->
    <div class="mb-4">
        <form asp-action="UpdateService" asp-controller="Basket" method="post">
            <label for="serviceType">Choisir le service :</label>
            <select id="serviceType" name="serviceType" class="form-select w-auto d-inline-block" onchange="this.form.submit()">
                <option value="Lunch" selected="@(Model.ServiceType == "Lunch")">Service du midi</option>
                <option value="Dinner" selected="@(Model.ServiceType == "Dinner")">Service du soir</option>
            </select>
        </form>
    </div>

    @if (Model == null || Model.Items.Count == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">Panier Vide</h4>
            <p>Votre panier est actuellement vide. Ajoutez des articles depuis les restaurants !</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-details">Découvrir les restaurants</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card restaurant-card">
                    <div class="card-body">
                        <h5 class="card-title">Articles dans le panier</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Article</th>
                                    <th>Type</th>
                                    <th>Quantité</th>
                                    <th>Prix unitaire</th>
                                    <th>Total</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach ((int id, int quantity) in Model.Items)
                                {
                                    MealViewModel meal = mealDetails.FirstOrDefault(m => m.Id == id);
                                    if (meal != null)
                                    {
                                        // Vérifier si le repas est compatible avec le type de service sélectionné
                                        bool isCompatible = string.IsNullOrEmpty(Model.ServiceType) ||
                                        (Model.ServiceType == "Lunch" && meal.LunchService != null) ||
                                        (Model.ServiceType == "Dinner" && meal.DinnerService != null);

                                        <tr class="@(!isCompatible ? "text-muted text-decoration-line-through" : "")">
                                            <td>@meal.Name</td>
                                            <td>
                                                @if (meal.Type == "Menu")
                                                {
                                                    <span class="badge bg-info badge-menu">Menu</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary badge-dish">Dish</span>
                                                }
                                            </td>
                                            <td>@quantity</td>
                                            <td>@meal.Price.ToString("C", CultureInfo.CurrentCulture)</td>
                                            <td>@((meal.Price * quantity).ToString("C", CultureInfo.CurrentCulture))</td>
                                            <td>
                                                <a asp-action="Remove" asp-route-id="@id" class="btn btn-outline-danger btn-sm">Retirer</a>
                                            </td>
                                        </tr>
                                        @if (meal.Type == "Menu" && meal.Dishes != null && meal.Dishes.Any())
                                        {
                                            <tr class="@(!isCompatible ? "text-muted text-decoration-line-through" : "")">
                                                <td colspan="6">
                                                    <h6 class="mt-3">Plats inclus :</h6>
                                                    <ul class="dish-list">
                                                        @foreach (MealViewModel dish in meal.Dishes)
                                                        {
                                                            <li class="@(!isCompatible ? "text-muted text-decoration-line-through" : "")">
                                                                @dish.Name
                                                            </li>
                                                        }
                                                    </ul>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                        <h5 class="text-end">Total : @Model.Total.ToString("C", CultureInfo.CurrentCulture)</h5>
                        <div class="text-end">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-details">Continuer les achats</a>
                            <a asp-action="Pay" class="btn btn-success btn-nav">Passer la commande</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
