@model List<Restaurant>
@using System.Globalization

@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="header">
        <h1 class="display-4">Welcome to TakeAway</h1>
        <p class="lead">Discover our partner restaurants and their delicious menus.</p>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">No Restaurants Available</h4>
            <p>There are currently no restaurants. Check back soon!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (Restaurant r in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card restaurant-card">
                        <div class="card-body">
                            <h5 class="card-title">@r.Name</h5>
                            <p class="card-text">@r.Description</p>
                            <p class="card-text">
                                <strong>Phone:</strong> @r.PhoneNumber
                            </p>
                            <p class="card-text">
                                <strong>Address:</strong> @r.StreetNumber @r.StreetName, @r.PostalCode @r.City, @r.Country
                            </p>
                            <p class="service-time">
                                <strong>Lunch:</strong>
                                @if (r.LunchService != null)
                                {
                                    <span>@r.LunchService.StartTime?.ToString(@"hh\:mm") - @r.LunchService.EndTime?.ToString(@"hh\:mm")</span>
                                }
                                else
                                {
                                    <span>Not available</span>
                                }
                            </p>
                            <p class="service-time">
                                <strong>Dinner:</strong>
                                @if (r.DinnerService != null)
                                {
                                    <span>@r.DinnerService.StartTime?.ToString(@"hh\:mm") - @r.DinnerService.EndTime?.ToString(@"hh\:mm")</span>
                                }
                                else
                                {
                                    <span>Not available</span>
                                }
                            </p>
                            <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-primary btn-details">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .header {
        background: linear-gradient(135deg, #343a40, #495057);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .restaurant-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .restaurant-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .service-time {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .btn-details {
        transition: background-color 0.2s;
    }

        .btn-details:hover {
            background-color: #005cbf;
            border-color: #005cbf;
        }

    .btn-nav {
        transition: background-color 0.2s;
    }

        .btn-nav:hover {
            background-color: #218838;
            border-color: #218838;
        }
</style>