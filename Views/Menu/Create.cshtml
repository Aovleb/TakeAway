@model Menu

@{
    ViewData["Title"] = "Create Menu";
}

<div class="container py-5">
    <div class="header">
        <h1 class="display-4">Create a New Menu</h1>
        <p class="lead">Add a new menu to your restaurant.</p>
    </div>

    <form asp-action="Create" method="post" class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <h4>Menu Information</h4>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <h5 class="mt-4">Services</h5>
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" value="true" id="lunchService" name="chooseLunchService" @(ViewData.ModelState["chooseLunchService"]?.AttemptedValue == "true" ? "checked" : "") />
                        <label class="form-check-label" for="lunchService">@ViewData["LunchService"]</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" value="true" id="dinnerService" name="chooseDinnerService" @(ViewData.ModelState["chooseDinnerService"]?.AttemptedValue == "true" ? "checked" : "") />
                        <label class="form-check-label" for="dinnerService">@ViewData["DinnerService"]</label>
                    </div>
                    <span asp-validation-for="LunchService" class="text-danger"></span>
                </div>

                <h5 class="mt-4">Select Dishes</h5>
                <div class="form-group mb-3">
                    @if (ViewData["Dishes"] != null)
                    {
                        List<Dish> dishes = ViewData["Dishes"] as List<Dish>;
                        List<int> selectedDishIds = ViewData["SelectedDishIds"] as List<int> ?? new List<int>();
                        foreach (Dish dish in dishes)
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" value="@dish.Id" id="dish_@dish.Id" name="selectedDishIds" @(selectedDishIds.Contains(dish.Id) ? "checked" : "") />
                                <label class="form-check-label" for="dish_@dish.Id">@dish.Name</label>
                            </div>
                        }
                    }
                    <span asp-validation-for="Dishes" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <button type="submit" class="btn btn-outline-success btn-create px-5">Create</button>
            @if (ViewData["RestaurantId"] != null)
            {
                <a asp-controller="Restaurant" asp-action="Menus" asp-route-id="@ViewData["RestaurantId"]" class="btn btn-outline-secondary btn-back ms-3">Back</a>
            }
            else
            {
                <a asp-controller="Restaurant" asp-action="Index" class="btn btn-outline-secondary btn-back ms-3">Back to Restaurants</a>
            }
        </div>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .header {
        background: linear-gradient(135deg, #343a40, #495057);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-control {
        border-radius: 0.5rem;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #005cbf;
            box-shadow: 0 0 5px rgba(0, 92, 191, 0.3);
        }

    .text-danger {
        min-height: 1.25rem;
        display: block;
        font-size: 0.9rem;
    }

    .btn-create {
        transition: background-color 0.2s;
    }

        .btn-create:hover {
            background-color: #218838;
            border-color: #218838;
        }

    .btn-back {
        transition: background-color 0.2s;
    }

        .btn-back:hover {
            background-color: #6c757d;
            border-color: #6c757d;
        }
</style>