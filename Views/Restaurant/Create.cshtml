@model Restaurant

@{
    ViewData["Title"] = "Create restaurant";
}

<h1 class="text-center mb-4">Create a new restaurant</h1>

<form asp-action="Create" method="post" class="container mb-5">

    <div class="row">
        <div class="col-md-6">
            <h4>Restaurant Info</h4>

            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <h5 class="mt-4">Lunch Service</h5>
            <div class="form-group mb-3">
                <label asp-for="LunchService.StartTime"></label>
                <input asp-for="LunchService.StartTime" type="time" class="form-control" />
                <span asp-validation-for="LunchService.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LunchService.EndTime"></label>
                <input asp-for="LunchService.EndTime" type="time" class="form-control" />
                <span asp-validation-for="LunchService.EndTime" class="text-danger"></span>
            </div>

            <h5 class="mt-4">Dinner Service</h5>
            <div class="form-group mb-3">
                <label asp-for="DinnerService.StartTime"></label>
                <input asp-for="DinnerService.StartTime" type="time" class="form-control" />
                <span asp-validation-for="DinnerService.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DinnerService.EndTime"></label>
                <input asp-for="DinnerService.EndTime" type="time" class="form-control" />
                <span asp-validation-for="DinnerService.EndTime" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Address</h4>

            <div class="form-group mb-3">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StreetNumber"></label>
                <input asp-for="StreetNumber" class="form-control" />
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary px-5">Create</button>
                </div>
            </div>
        </div>
    </div>

    

</form>



<style>
    .text-danger {
        min-height: 1.25rem; /* ≈ 20px */
        display: block;
    }
</style>