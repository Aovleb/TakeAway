@model List<Dish>

<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
        <a asp-controller="Dish" asp-action="Create" class="btn btn-primary">Add a new dish</a>
    </div>

    <h1 class="text-center mb-4">Manage Dishes</h1>

    @if (Model == null || Model.Count == 0)
    {
        <p class="text-center">No dishes available.</p>
    }
    else
    {
        @foreach (var dish in Model)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h2>@dish.Name</h2>
                </div>
                <div class="card-body">
                    <p><strong>Description:</strong> @dish.Description</p>
                    <p><strong>Price:</strong> @dish.Price.ToString("C")</p>
                    <h4>Services</h4>
                    @if (dish.LunchService != null)
                    {
                        <p><strong>Lunch Service:</strong> @dish.LunchService.StartTime?.ToString(@"hh\:mm") - @dish.LunchService.EndTime?.ToString(@"hh\:mm")</p>
                    }
                    else
                    {
                        <p><strong>Lunch Service:</strong> Non disponible</p>
                    }
                    @if (dish.DinnerService != null)
                    {
                        <p><strong>Dinner Service:</strong> @dish.DinnerService.StartTime?.ToString(@"hh\:mm") - @dish.DinnerService.EndTime?.ToString(@"hh\:mm")</p>
                    }
                    else
                    {
                        <p><strong>Dinner Service:</strong> Non disponible</p>
                    }
                </div>
            </div>
        }
    }
</div>