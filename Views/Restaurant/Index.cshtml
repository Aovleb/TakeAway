@model List<Restaurant>
@using System.Globalization

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Bienvenue sur TakeAway</h1>

    @if (Model == null || Model.Count == 0)
    {
        <p class="text-center">Il n'y a pas de restaurant actuellement.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>PhoneNumber</th>
                    <th>Lunch Service</th>
                    <th>Dinner Service</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Restaurant r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Description</td>
                        <td>@r.PhoneNumber</td>
                        <td>@r.LunchService.StartTime.ToString("HH:mm")-@r.LunchService.EndTime.ToString("HH:mm")</td>
                        <td>@r.DinnerService.StartTime.ToString("HH:mm")-@r.DinnerService.EndTime.ToString("HH:mm")</td>
                        <td><a asp-action="Details" asp-route-id="@r.Id" class="btn btn-primary btn-sm">Voir les détails</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center mt-3">
        <a asp-action="Create" class="btn btn-success">Ajouter un Restaurant</a>
    </div>
</div>

<!-- Inclure Bootstrap pour un style amélioré -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>