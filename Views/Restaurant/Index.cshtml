@model List<Restaurant>
@using System.Globalization

@{
    ViewData["Title"] = "Restaurateur Dashboard";
}

<div class="container py-5">
    <div class="header">
        <h1 class="display-4">Restaurateur Dashboard</h1>
        <p class="lead">Manage your restaurants, menus, and dishes on TakeAway.</p>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">No Restaurants Available</h4>
            <p>You haven't added any restaurants yet. Start now!</p>
            <a asp-action="Create" class="btn btn-success btn-create mt-3">Add a Restaurant</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (Restaurant r in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card restaurant-card">
                        <div class="card-body">
                            <h5 class="card-title">@r.Name</h5>
                            <p class="card-text">@r.Description</p>
                            <p class="card-text">
                                <strong>Phone:</strong> @r.PhoneNumber
                            </p>
                            <p class="card-text">
                                <strong>Address:</strong> @r.StreetNumber @r.StreetName, @r.PostalCode @r.City, @r.Country
                            </p>
                            <p class="service-time">
                                <strong>Lunch:</strong>
                                @if (r.LunchService != null)
                                {
                                    <span>@r.LunchService</span>
                                }
                                else
                                {
                                    <span>Not available</span>
                                }
                            </p>
                            <p class="service-time">
                                <strong>Dinner:</strong>
                                @if (r.DinnerService != null)
                                {
                                    <span>@r.DinnerService</span>
                                }
                                else
                                {
                                    <span>Not available</span>
                                }
                            </p>
                            <div class="d-flex gap-2">
                                <a asp-action="Menus" asp-route-id="@r.Id" class="btn btn-outline-primary btn-manage">Manage Menus</a>
                                <a asp-action="Dishes" asp-route-id="@r.Id" class="btn btn-outline-primary btn-manage">Manage Dishes</a>
                                <a asp-action="Index" asp-controller="Order" asp-route-id="@r.Id" class="btn btn-outline-primary btn-manage">Gérer les Commandes</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    @if (Model != null && Model.Count > 0)
    {
        <div class="text-center mt-5">
            <a asp-action="Create" class="btn btn-outline-success btn-create">Add a Restaurant</a>
        </div>
    }
    
</div>
