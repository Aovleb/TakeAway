@model List<Restaurant>
@using System.Globalization

@{
    ViewData["Title"] = "Restaurateur Page";
}

<div class="container py-5">
    <div class="header">
        <h1 class="display-4">Espace Restaurateur</h1>
        <p class="lead">Gérez vos restaurants, menus et plats sur TakeAway.</p>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">Aucun restaurant disponible</h4>
            <p>Vous n'avez pas encore ajouté de restaurant. Commencez dès maintenant !</p>
            <a asp-action="Create" class="btn btn-success btn-create mt-3">Ajouter un restaurant</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (Restaurant r in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card restaurant-card">
                        <div class="card-body">
                            <h5 class="card-title">@r.Name</h5>
                            <p class="card-text">@r.Description</p>
                            <p class="card-text">
                                <strong>Téléphone :</strong> @r.PhoneNumber
                            </p>
                            <p class="service-time">
                                <strong>Déjeuner :</strong>
                                @if (r.LunchService != null)
                                {
                                    <span>@r.LunchService.StartTime?.ToString(@"hh\:mm") - @r.LunchService.EndTime?.ToString(@"hh\:mm")</span>
                                }
                                else
                                {
                                    <span>Non disponible</span>
                                }
                            </p>
                            <p class="service-time">
                                <strong>Dîner :</strong>
                                @if (r.DinnerService != null)
                                {
                                    <span>@r.DinnerService.StartTime?.ToString(@"hh\:mm") - @r.DinnerService.EndTime?.ToString(@"hh\:mm")</span>
                                }
                                else
                                {
                                    <span>Non disponible</span>
                                }
                            </p>
                            <div class="d-flex gap-2">
                                <a asp-action="Menus" asp-route-id="@r.Id" class="btn btn-outline-primary btn-manage">Gérer les menus</a>
                                <a asp-action="Dishes" asp-route-id="@r.Id" class="btn btn-outline-primary btn-manage">Gérer les plats</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-5">
        <a asp-action="Create" class="btn btn-outline-success btn-create">Ajouter un restaurant</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .header {
        background: linear-gradient(135deg, #343a40, #495057);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .restaurant-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .restaurant-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .service-time {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .btn-manage {
        transition: background-color 0.2s;
    }

        .btn-manage:hover {
            background-color: #005cbf;
            border-color: #005cbf;
        }

    .btn-create {
        transition: background-color 0.2s;
    }

        .btn-create:hover {
            background-color: #218838;
            border-color: #218838;
        }
</style>