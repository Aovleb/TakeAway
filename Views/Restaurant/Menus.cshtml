@model List<Menu>

@{
    ViewData["Title"] = "Manage Menus";
}

<div class="container py-5">
    <div class="header">
        <h1 class="display-4">Manage Menus</h1>
        <p class="lead">Add, edit, or delete menus for your restaurant.</p>
    </div>

    <div class="d-flex justify-content-between mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary btn-back">Back</a>
        @if (Model != null && Model.Count > 0)
        {
            <a asp-controller="Menu" asp-action="Create" class="btn btn-outline-success btn-create">Add a Menu</a>
        }
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">No Menus Available</h4>
            <p>This restaurant doesn't have any menus yet. Add one now!</p>
            <a asp-controller="Menu" asp-action="Create" class="btn btn-success btn-create mt-3">Add a Menu</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var menu in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card menu-card">
                        <div class="card-body">
                            <h5 class="card-title">@menu.Name</h5>
                            <p class="card-text">@menu.Description</p>
                            <p class="card-text fw-bold">@menu.Price.ToString("C")</p>
                            <div class="mt-3">
                                <p class="service-time">
                                    <strong>Lunch:</strong>
                                    @if (menu.LunchService != null)
                                    {
                                        <span>@menu.LunchService.StartTime?.ToString(@"hh\:mm") - @menu.LunchService.EndTime?.ToString(@"hh\:mm")</span>
                                    }
                                    else
                                    {
                                        <span>Not available</span>
                                    }
                                </p>
                                <p class="service-time">
                                    <strong>Dinner:</strong>
                                    @if (menu.DinnerService != null)
                                    {
                                        <span>@menu.DinnerService.StartTime?.ToString(@"hh\:mm") - @menu.DinnerService.EndTime?.ToString(@"hh\:mm")</span>
                                    }
                                    else
                                    {
                                        <span>Not available</span>
                                    }
                                </p>
                            </div>
                            <!--
                            <div class="d-flex gap-2 mt-3">
                                <a asp-action="Edit" asp-route-id="@menu.Id" class="btn btn-outline-primary btn-action">Edit</a>
                                <a asp-action="Delete" asp-route-id="@menu.Id" class="btn btn-outline-danger btn-delete" onclick="return confirm('Are you sure you want to delete this menu?');">Delete</a>
                            </div>
                            -->
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .header {
        background: linear-gradient(135deg, #343a40, #495057);
        color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .menu-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
    }

        .menu-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .service-time {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .btn-action {
        transition: background-color 0.2s;
    }

        .btn-action:hover {
            background-color: #005cbf;
            border-color: #005cbf;
        }

    .btn-create {
        transition: background-color 0.2s;
    }

        .btn-create:hover {
            background-color: #218838;
            border-color: #218838;
        }

    .btn-back {
        transition: background-color 0.2s;
    }

        .btn-back:hover {
            background-color: #6c757d;
            border-color: #6c757d;
        }

    .btn-delete {
        transition: background-color 0.2s;
    }

        .btn-delete:hover {
            background-color: #dc3545;
            border-color: #dc3545;
        }
</style>